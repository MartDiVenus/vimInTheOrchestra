sudo rm -fr /tmp/splitValeNetrw-SMarked

mkdir /tmp/splitValeNetrw-SMarked

split -l1 /tmp/valeNetrw-SMarked /tmp/splitValeNetrw-SMarked/

for a in $(ls /tmp/splitValeNetrw-SMarked)
do
	leggoA=$(cat /tmp/splitValeNetrw-SMarked/$a)
	sudo -S chown $USER:$USER $leggoA
        sudo -S chmod uga+xrw $leggoA
done

sudo rm -r /tmp/splitValeNetrw-SMarked /tmp/valeNetrw-SMarked





exit

 


